// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role{
  COMMON
  EDITOR
  ADMIN
}

model User{
  id String @id @default(uuid())
  name String @db.VarChar(254)
  email String? @db.VarChar(254)
  login String @db.VarChar(128) @unique
  password String @db.VarChar(128)
  cpf String @db.VarChar(14) @unique
  role Role @default(EDITOR)
  is_active Boolean @default(true)
  is_first_access Boolean @default(true)
  created_at DateTime @default(now())
  profile Image?
  token Token?
  listImage ListImage[]

  @@map("users")
}

model Post{
  id String @id @default(uuid())
  name String @db.VarChar(254)
  email String? @db.VarChar(254)
  login String @db.VarChar(128) @unique
  password String @db.VarChar(128)
  cpf String @db.VarChar(14) @unique
  role Role @default(EDITOR)
  is_active Boolean @default(true)
  is_first_access Boolean @default(true)
  created_at DateTime @default(now())
  listImage ListImage[]

  @@map("posts")
}

model PostBlog{
  id String @id
  name String @db.VarChar(254)
  email String? @db.VarChar(254)
  login String @db.VarChar(128) @unique
  password String @db.VarChar(128)
  cpf String @db.VarChar(14) @unique
  role Role @default(EDITOR)
  is_active Boolean @default(true)
  is_first_access Boolean @default(true)
  created_at DateTime @default(now())

  @@map("posts_blog")
}

model Image{
  id String @id @default(uuid())
  name String @db.VarChar(200)
  size Int @db.Integer()
  url String @db.Text()
  key String @unique @db.VarChar(200)
  created_at DateTime @default(now())
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id String @unique
  listImage ListImage[]

  @@map("images")
}

model ListImage{
  post Post @relation(fields: [post_id], references: [id], onDelete: Cascade)
  post_id String
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id String
  image Image @relation(fields: [image_id], references: [id], onDelete: Cascade)
  image_id String

  @@id([post_id, user_id, image_id])
  @@map("list_image")
}

model Token{
  id String @id @default(uuid())
  token String @db.VarChar(200)
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id String @unique
  created_at DateTime @default(now())

  @@map("token")
}
